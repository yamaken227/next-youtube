<div class='top-page-header'>
  <h1 class='left-character'><%= link_to 'Shuffle Video', root_path , class: 'servise-name' %></h1>
  <ul class='right-list'>
    <% if user_signed_in? %>
      <li><%= link_to current_user.channel_name, user_path(current_user.id)  , class: 'channel-name' %></li>
      <li><%= link_to 'ログアウト', destroy_user_session_path, method: :delete, class: "logout" %></li>
    <% else %>
      <li><%= link_to 'ログイン' , new_user_session_path , class: 'login' %></li>
      <li><%= link_to '新規登録' , new_user_registration_path , class: 'sign-up' %></li>
    <% end %>
  </ul>
</div>