<h1>新規登録</h1>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="field">
    <%= f.label :channel_name, 'チャンネル名' %><br />
    <%= f.text_field :channel_name, autofocus: true %>
  </div>

  <div class="field">
    <%= f.label :subscribers_num, 'チャンネル登録者数' %><br />
    <%= f.text_field :subscribers_num, autofocus: true %>人
  </div>
  <div class="field">
    <%= f.label :channel_url, 'YouTubeチャンネルURL' %><br />
    <%= f.text_field :channel_url, autofocus: true %>
  </div>
   <div class="field">
    <%= f.label :twitter_url, 'TwitterURL' %><br />
    <%= f.text_field :twitter_url, autofocus: true %>
  </div> 
   <div class="field">
    <%= f.label :what_channel, 'どんなチャンネル？' %><br />
    <%= f.text_area :what_channel, autofocus: true %>
  </div> 

  <div class="field">
    <%= f.label :email, 'メールアドレス' %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
  </div>

  <div class="field">
    <%= f.label :password, 'パスワード' %>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> characters minimum)</em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "new-password" %>
  </div>

  <div class="field">
    <%= f.label :password_confirmation, 'パスワード(確認用)' %><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
  </div>

  <div class="actions">
    <%= f.submit "登録" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
